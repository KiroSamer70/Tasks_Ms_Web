@model Tasks_MS_Web.Models.Projects

@{
    ViewData["Title"] = "Project Details";
}

<h2>Project Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
</div>

<h4>Tasks</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskPeriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskDeadLine)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskPeriority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskDeadLine)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="IndexProject" class="btn btn-primary">Back to List</a>
</div>
