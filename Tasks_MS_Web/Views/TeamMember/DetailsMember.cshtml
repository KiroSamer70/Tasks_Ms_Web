@model Tasks_MS_Web.Models.TeamMember

@{
    ViewData["Title"] = "Team Member Details";
}

<h2>Team Member Details</h2>

<div>
    <h4>Team Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberRole)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberRole)
        </dd>
    </dl>
</div>

<h4>Tasks</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskPeriority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.First().TaskDeadLine)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskPeriority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => task.TaskDeadLine)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="EditMember" asp-route-MemberID="@Model.MemberID" class="btn btn-primary">Edit</a>
    <a asp-action="IndexMember" class="btn btn-secondary">Back to List</a>
</div>
